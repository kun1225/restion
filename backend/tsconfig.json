{
  /* Visit https://aka.ms/tsconfig to read more about this file */
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "rootDir": "./../",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["jest", "node"],
    "baseUrl": "./",
    "paths": {
      "@restion/shared": ["../shared/dist"],
      "@restion/shared/*": ["../shared/dist/*"]
    }
  },
  "include": ["src/**/*", "knexfile.ts", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
