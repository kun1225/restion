{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "cSpell.words": [
    "knexfile",
    "restion"
  ],
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue"
  ],
  "eslint.workingDirectories": [
    "./frontend",
    "./backend",
    "./shared"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit", 
  }
}